include ../partials/mixins.pug

.panel.panel-primary( data-barcode=item.barcode, data-type='item' )
	.panel-heading
		h3.panel-title
			span.glyphicon.glyphicon-tag
			|  
			a( href="/items/" + item.id )=item.name
			- status = item.status
			.pull-right( style="margin-top: -3px;" ): include ../../../apps/items/views/partials/status.pug
	.panel-body
		.row
			.col-md-10
				dl.dl-horizontal
					dt Barcode
					dd
						span.glyphicon.glyphicon-print
						|  
						+clipboard( item.barcode )
					if item.group_id
						dt Group
						dd: +group( item.group_name, item.group_id )
						dt Location
						dd: +location( item.location_name, item.location_id )
					if item.owner_id
						dt Owner:
						dd: +user( item.owner_name, item.owner_id )
			.col-md-2.buttons
				if item.status == 'available'
					button.btn.btn-default.pull-right( style='margin-bottom: .25em;' ) Lost
					button.btn.btn-default.pull-right Broken
				else
					button.btn.btn-default.pull-right Return
					