if locations.length > 0
	.table-responsive
		table.table.table-striped.table-hover.table-condensed
			tgroup
				col( width="60%" )
				col( width="20%" )
				col( width="20%" )
			thead
				tr
					th Name
						span.dropup
							span.caret
					th View
					th Manage
			tbody
				for location in locations
					tr
						td=location.name
						td
							a( href="/items/?location=" + location.id ).btn.btn-xs.btn-default
								span.glyphicon.glyphicon-modal-window
								|  Items
						td
							a( href="/locations/" + location.id + '/edit' ).btn.btn-xs.btn-primary
								span.glyphicon.glyphicon-pencil
								|  Edit
							|  
							a( href="/locations/" + location.id + '/remove' ).btn.btn-xs.btn-danger
								span.glyphicon.glyphicon-trash
								|  Delete
else
	+messageBlock( 'warning', 'There are no locations to display.' )
