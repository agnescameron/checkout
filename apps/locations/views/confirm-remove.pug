extends ../../../src/views/base.pug

block prepend title
	- title = 'Remove: ' + selected.name
	- heading = "Are you sure you want to remove " + selected.name + "?"

block contents
	form( method="post" ).form-horizontal
		+messageBlock( 'info', 'Deleting this location will transfer all the items to the new location selected below.' )
		.form-group
			label( for="location" ).col-md-2.control-label Transfer items to
			.col-md-4
				select( name="location", required )#location.form-control
					option( value="" disabled selected ) Select a location
					for location in locations
						option( value=location.id, disabled=location.disabled )=location.name
		.form-group
			.col-md-4.col-md-offset-2
				button( type='submit' ).btn.btn-danger Yes, delete and transfer
				|  
				a( href="/locations" ).btn.btn-default Cancel
