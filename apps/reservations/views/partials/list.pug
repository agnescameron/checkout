if reservations && reservations.length > 0
	.table-responsive
		table.table.table-striped
			thead
				tr
					th Action
					th Item
					th Barcode
					th Owner
					th Start
						| 
						span.fas.fa-angle-up.text-muted
					th End
					th Manage
			tbody
				for reservation in reservations
					tr
						td: +status( reservation.action )
						td: +item( reservation.item_name, reservation.item_id )
						td: +clipboard(reservation.item_barcode)
						td: +user( reservation.owner_name, reservation.owner_id )
						td: +fulldate( reservation.start_date )
						td: +fulldate( reservation.end_date )
						td
							+editBtn( '/reservations/' + reservation.id + '/edit' )
							+space
							+removeBtn( '/reservations/' + reservation.id + '/remove' )
else
	+messageBlock( 'warning', 'black','There are no reservations to display.' )
