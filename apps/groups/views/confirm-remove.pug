extends ../../../src/views/base.pug

block prepend title
	- title = 'Remove: ' + selected.name
	- heading = "Are you sure you want to remove " + selected.name + "?"

block contents
	form( method="post" ).form-horizontal
		+messageBlock( 'info', 'Items do not have to be associated with a group by not selecting a new group the items will be removed from the group being deleted.' )
		.form-group
			label( for="group" ).col-md-2.control-label Transfer items to
			.col-md-4
				select( name="group" )#group.form-control
					option( value="" disabled selected ) Select a group
					for group in groups
						option( value=group.id, disabled=group.disabled )=group.name
		.form-group
			.col-md-4.col-md-offset-2
				button( type='submit' ).btn.btn-danger Yes, delete group
				|  
				a( href="/groups" ).btn.btn-default Cancel
