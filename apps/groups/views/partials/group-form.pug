form( method="post" ).form-horizontal
	.form-group
		label( for="name" ).col-md-2.control-label Name
		.col-md-4
			input( name="name" type="text" value=group.name required )#name.form-control
	.form-group
		label( for="limiter" ).col-md-2.control-label Limiter
		.col-md-4
			input( name="limiter" type="number" value=group.limiter )#limiter.form-control
	.form-group
		.col-md-4.col-md-offset-2
			button( type="submit" ).btn.btn-primary=action
			|  
			a( href="/groups" ).btn.btn-default Cancel
