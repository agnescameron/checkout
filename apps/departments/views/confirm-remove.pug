extends ../../../src/views/base.pug

block prepend title
	- title = 'Remove: ' + selected.name
	- heading = "Are you sure you want to remove " + selected.name + "?"

block contents
	form( method="post" ).form-horizontal
		+messageBlock( 'info', 'Deleting this department will transfer all the items to the new department selected below.' )
		.form-group
			label( for="department" ).col-md-2.control-label Transfer items to
			.col-md-4
				select( name="department", required )#department.form-control
					option( value="" disabled selected ) Select a department
					for department in departments
						option( value=department.id, disabled=department.disabled )=department.name
		.form-group
			.col-md-4.col-md-offset-2
				button( type='submit' ).btn.btn-danger Yes, delete and transfer
				|  
				a( href="/departments" ).btn.btn-default Cancel
