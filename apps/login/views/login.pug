extends ../../../src/views/base.pug

block prepend title
	- title = "Login"
	- heading = title

block append css
	link( rel="stylesheet", type="text/css", href="/css/login.css" )

block contents
	form( method="post", action="/login" ).form-signin
		label( for="username" ).sr-only Username
		input( type="username" name="username" placeholder="Username" required autofocus )#username.form-control
		label( for="password" ).sr-only Username
		input( type="password" name="password" placeholder="Password" required )#password.form-control
		button( type="submit" ).btn.btn-lg.btn-primary.btn-block Login
