if items && items.length > 0
	.table-responsive
		table.table.table-striped.table-sm
			thead
				tr
					th Name
						| 
						span.fas.fa-angle-up.text-muted
					th Availability
					th
			tbody
				for item in items
					tr
						td=item.name
						td #{item.available} / #{item.stock}
else
	+messageBlock('warning', 'black', 'There are no items to display.')
