	+csrf
	.form-group.row
		label( for="name" ).col-lg-2.col-form-label Name
		.col-lg-4
			input( name="name" type="text" value=role.name required )#name.form-control
	.form-group.row
		label( for="home" ).col-lg-2.col-form-label Home
		.col-lg-4
			input( name="home" type="text" value=role.home required )#home.form-control
	.form-group.row
		.col-lg-4.offset-lg-2
			button( type="submit" ).btn.btn-primary=action
			|  
			a( href="/roles" ).btn.btn-outline-dark Cancel
