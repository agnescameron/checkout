form( method="post" )
	+csrf
	.form-group.row
		label( for="name" ).col-lg-2.col-form-label Name
		.col-lg-4
			input( name="name", type="text", value=( template && template.name ? template.name : null ), required ).form-control#name
	.form-group.row
		label( for="template" ).col-lg-2.col-form-label Email template
		.col-lg-4
			textarea( name="template", rows="15", type="text", required )#template.form-control=(template && template.template ?template.template:'')
	.row
		.col-lg-4.offset-lg-2
			p.mb-0
				small Supported template tags are: 
				.badge.badge-pill.badge-secondary(title="Name of user receiving the email") [name]
				|  
				.badge.badge-pill.badge-secondary(title="List of items") [list]
				|  
				.badge.badge-pill.badge-secondary(title="Organisation name from template") [org]
	.form-group.row
		.col-lg-4.offset-lg-2
			button( type="submit" ).btn.btn-primary=action
			|  
			a( href="/templates" ).btn.btn-outline-dark Cancel
