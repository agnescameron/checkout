extends ../../../src/views/base.pug

block prepend title
	- title = 'Remove: ' + selected.name
	- heading = "Are you sure you want to remove " + selected.name + "?"

block contents
	form( method="post" ).form-horizontal
		+messageBlock( 'info', 'Deleting this course will transfer all the users to the new course selected below.' )
		.form-group
			label( for="course" ).col-md-2.control-label Transfer users to
			.col-md-4
				select( name="course", required )#course.form-control
					option( value="" disabled selected ) Select a course
					for course in courses
						option( value=course.id, disabled=course.disabled )=course.name
		.form-group
			.col-md-4.col-md-offset-2
				button( type='submit' ).btn.btn-danger Yes, delete and transfer
				|  
				a( href="/courses" ).btn.btn-default Cancel
