if courses.length > 0
	.table-responsive
		table.table.table-striped.table-hover.table-condensed
			tgroup
				col( width="40%" )
				col( width="20%" )
				col( width="20%" )
				col( width="20%" )
			thead
				tr
					th Name
						span.dropup
							span.caret
					th Contact
					th View
					th Manage
			tbody
				for course in courses
					tr
						td=course.name
						td: +user( course.contact_name, course.contact_id )
						td
							+btn( 'xs', 'default', 'user', 'Users', '/users/?course=' + course.id )
							+space
							+btn( 'xs', 'default', 'modal-window', 'Items', '/items/?course=' + course.id )
						td
							+editBtn( '/courses/' + course.id + '/edit' )
							+space
							+deleteBtn( '/courses/' + course.id + '/remove' )
else
	+messageBlock( 'warning', 'There are no courses to display.' )
