extends ../../../src/views/base.pug

block prepend title
	- title = "Items"
	- heading = title

block header
	.page-header
		h2=heading
			a( href="/items/generate" ).btn.btn-default.btn-m.pull-right
				span.glyphicon.glyphicon-asterisk
				|  Generate Items
			a( href="/items/create", style="margin-right: 1em;" ).btn.btn-default.btn-m.pull-right
				span.glyphicon.glyphicon-plus
				|  Create Item

block contents
	- filter_path = '/items/'
	include partials/filter.pug
	form#items-form( action="/items/edit", method="post" )
		- edit = true
		include partials/items-list.pug
		if items && items.length > 0
			button( type="submit" ).btn.btn-sm.btn-primary
				span.glyphicon.glyphicon-pencil
				|  Edit Selected
			|  
			button#multi-print(disabled type="button" ).btn.btn-sm.btn-default
				span.glyphicon.glyphicon-print
				|  Print Selected Labels
