if history.length > 0
	table.table.table-striped
		thead
			tr
				th Action
				th User
				th When
				th Operator
		tbody
			for row in history
				tr
					td: +status( row.action )
					td: +user( row.user_name, row.user_id )
					td: +relative( row.datetime )
					td: +user( row.operator_name, row.operator_id )
					
else
	+messageBlock( 'warning', 'This item has no history.' )
