if history.length > 0
	table.table.table-striped
		thead
			tr
				th Action
				th User
				th When
				th Operator
		tbody
			for row in history
				tr
					- status = row.action
					td: include status.pug
					td
						if row.user_id
							a( href="/users/" + row.user_id )=row.user_name
						else
							| &mdash;
					td: +relative( row.datetime )
					td: a( href="/users/" + row.operator_id )=row.operator_name
					
else
	+messageBlock( 'warning', 'This item has no history.' )
