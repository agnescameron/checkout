extends ../../../src/views/base.pug

block prepend title
	- title = "Edit Multiple Items"
	- heading = title

block contents
	form( action="/items/edit" method="post" ).form-horizontal
		.form-group
			label( for="label" ).col-md-2.control-label Label
			.col-md-4
				.input-group
					select( name="label" required )#label.form-control
						option( value="1d_reg" ) Regular 1D 
						option( value="2d_flag" ) Flag 2D
						option( value="2d_compact" ) Compact 2D
					span.input-group-addon
						input( type="checkbox" name="fields[]" value="label" )
		.form-group
			label( for="group" ).col-md-2.control-label Group
			.col-md-4
				.input-group
					select( name="group" )#group.form-control
						option( value="" selected ) Select a group
						for group in groups
							option( value=group.id )=group.name
					span.input-group-addon
						input( type="checkbox" name="fields[]" value="group" )
		.form-group
			label( for="location" ).col-md-2.control-label Location
			.col-md-4
				.input-group
					select( name="location" )#location.form-control
						option( value="" disabled selected ) Select a location
						for location in locations
							option( value=location.id )=location.name
					span.input-group-addon
						input( type="checkbox" name="fields[]" value="location" )
		.form-group
			label( for="value" ).col-md-2.control-label Value
			.col-md-4
				.input-group
					span.input-group-addon &pound;
					input( name="value" type="number" )#value.form-control
					span.input-group-addon
						input( type="checkbox" name="fields[]" value="value" )
		.form-group
			label( for="notes" ).col-md-2.control-label Notes
			.col-md-4
				.input-group
					input( name="notes" type="text" )#notes.form-control
					span.input-group-addon
						input( type="checkbox" name="fields[]" value="notes" )
		.form-group
			.col-md-4.col-md-offset-2
				button( type="submit" ).btn.btn-default Update
		h3 Items
		- edit = true
		- multi = true
		include partials/items-list.pug
