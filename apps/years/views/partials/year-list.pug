if years.length > 0
	.table-responsive
		table.table.table-striped.table-hover.table-condensed
			tgroup
				col( width="80%" )
				col( width="20%" )
			thead
				tr
					th Name
						span.dropup
							span.caret
					th Manage
			tbody
				for year in years
					tr
						td=year.name
						td
							a( href="/years/" + year.id + '/edit' ).btn.btn-xs.btn-primary
								span.glyphicon.glyphicon-pencil
								|  Edit
							|  
							a( href="/years/" + year.id + '/remove' ).btn.btn-xs.btn-danger
								span.glyphicon.glyphicon-trash
								|  Delete
else
	+messageBlock( 'warning', 'There are no years to display.' )
