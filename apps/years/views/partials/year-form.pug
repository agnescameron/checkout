form( method="post" ).form-horizontal
	.form-group
		label( for="name" ).col-md-2.control-label Name
		.col-md-4
			input( name="name", type="text", value=( year && year.name ? year.name : null ), required ).form-control#name
	.form-group
		.col-md-4.col-md-offset-2
			button( type="submit" ).btn.btn-primary=action
			|  
			a( href="/years" ).btn.btn-default Cancel
